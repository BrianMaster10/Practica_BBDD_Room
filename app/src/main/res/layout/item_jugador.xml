<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TextView para mostrar el nombre del jugador -->
    <TextView
        android:id="@+id/nombreJugadorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Jugador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"/>

    <!-- TextView para mostrar la posición del jugador -->
    <TextView
        android:id="@+id/posicionJugadorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posición"
        app:layout_constraintStart_toStartOf="@id/nombreJugadorTextView"
        app:layout_constraintTop_toBottomOf="@id/nombreJugadorTextView"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>

    <!-- TextView para mostrar el dorsal del jugador -->
    <TextView
        android:id="@+id/dorsalJugadorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dorsal"
        app:layout_constraintStart_toEndOf="@id/posicionJugadorTextView"
        app:layout_constraintTop_toTopOf="@id/posicionJugadorTextView"
        android:layout_marginStart="16dp"
        android:textSize="16sp"/>

    <!-- Puedes agregar más vistas según tus necesidades -->

</androidx.constraintlayout.widget.ConstraintLayout>
